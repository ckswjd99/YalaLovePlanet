    <script>
        const overlayOn = () => {
            const overlay = document.getElementById('popup');
            overlay.setAttribute("visible", "true");
            overlay.setAttribute("style", "opacity: 1;");
        }
    </script>

    <div id="popup" style="opacity: 0; display: none;" onclick="toggleSelf(this)">
        <div class="popup_box join_done">
            <p>가입이 완료되었습니다!</p>
            <div class="popup_button" onclick="location.href='/userShow'">확인</div>
